
        <div class="row">
          <div class="col-lg-6">
                <h1>Renda</h1>
 
                <table>
                  <thead>
                    <tr>
                      <th>Categoria</th>
                      <th>Valor</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                 
                  <tbody>
                    <% @incomes.each do |income| %>
                      <tr>
                        <td><%= income.category %></td>
                        <td><%= income.value %></td>
                        <td><%= link_to "Ver", income %></td>
                        <td><%= link_to 'Editar', edit_income_path(income) %></td>
                        <td><%= link_to "Deletar", income, method: :delete, class:"btn btn-danger", data: { confirm: "Are you sure?" } %></td>
                
                      </tr>
                      
                    <% end %>
                  </tbody>
                </table>
                 
                <br>
                <p>
                        Total: <%= @income_total%>
                    </p>
                <%= link_to "Nova renda", new_income_path, class:"btn btn-success"%>
                
                
          </div>
          <div class="col-lg-6">
            
